<?xml version='1.0' encoding='utf-8'?>
<widget id="com.devintbilisim.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>devint</name>
    <description>
        TarÄ±msal Sulama ve Otomasyon Sistemleri
    </description>
    <author email="info@devintbilisim.om" href="http://www.devintbilisim.com">
        Devint Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
	<icon src="res/icon-152x152.png"  width="48" height="48"/>		
	<preference name="SplashScreenDelay" value="4000" />
	<splash src="res/drawable-port-xxxhdpi-screen.png" />	
	
	
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<engine name="android" spec="~5.2.2" />
</widget>
